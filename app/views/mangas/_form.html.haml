= form_for @manga do |f|
  - if @manga.errors.any?
    #error_explanation
      %h2= "#{pluralize(@manga.errors.count, "error")} prohibited this manga from being saved:"
      %ul
        - @manga.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :genre
    = f.text_field :genre
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
